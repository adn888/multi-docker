{
    "AWSEBDockerrunVersion" : 2,
    "containerDefintions": [
        {
            "name": "client",
            "image": "adnadn/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "adnadn/multi-server",
            "hostname": "api",
            "essential": false, 
            "memory": 128
        },
        {
            "name": "worker",
            "image": "adnadn/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128  
        },
        {
            "name": "nginx",
            "image": "adnadn/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}